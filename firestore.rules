rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
  	function isSignedIn(){
    	return request.auth != null;
    }
  
    function isAdmin() {
      return isSignedIn() && get(/databases/(database)/documents/users/$(request.auth.uid)).data.admin == true;
    }
  
    match /signups/{userId} {
      allow create: if isSignedIn() && request.auth.uid == userId && request.resource.data.keys().hasAll(['name', 'email', 'mobile', 'signupTime', 'uid']);
      allow get: if isSignedIn();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    match /signups{
      allow list: if isAdmin();
    }
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }
  }
}